# ZoekTrends Django Dashboard - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Django Configuration
# =============================================================================
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (Recommended)
DATABASE_URL=postgresql://zoektrends:password@localhost:5432/zoektrends_dashboard

# OR MySQL
# DATABASE_URL=mysql://zoektrends:password@localhost:3306/zoektrends_dashboard

# =============================================================================
# Google Cloud Configuration
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=agiliz-sales-tool
GOOGLE_CLOUD_PROJECT_NUMBER=904754592426
GOOGLE_CLOUD_REGION=europe-west1
GOOGLE_APPLICATION_CREDENTIALS=./agiliz-sales-tool-cdc244cef3ba.json

# BigQuery
BIGQUERY_DATASET=zoektrends_job_data
BIGQUERY_TABLE=job_postings

# Cloud Run Jobs
CLOUD_RUN_JOB_NAME=zoektrends-exhaustive
CLOUD_RUN_TIMEOUT=1800

# =============================================================================
# Looker Configuration
# =============================================================================
LOOKER_HOST=your-company.looker.com
LOOKER_EMBED_SECRET=your-looker-embed-secret
LOOKER_EMBED_USER=embed_user@zoektrends.com
LOOKER_DEFAULT_DASHBOARD_ID=your-dashboard-id
LOOKER_CLIENT_ID=
LOOKER_CLIENT_SECRET=

# =============================================================================
# Redis Configuration (Caching & Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Cache Settings
# =============================================================================
CACHE_TTL_STATS=300      # 5 minutes
CACHE_TTL_JOBS=120       # 2 minutes
CACHE_TTL_COMPANIES=180  # 3 minutes

# =============================================================================
# Dashboard Settings
# =============================================================================
DASHBOARD_RESULTS_LIMIT=500
DASHBOARD_MAX_RESULTS_LIMIT=1000

# =============================================================================
# AI Services Configuration
# =============================================================================
# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AI Provider for contact details: 'gemini' or 'openai'
AI_CONTACT_PROVIDER=gemini

# =============================================================================
# Authentication
# =============================================================================
# Comma-separated list of allowed emails
ALLOWED_EMAILS=kamalru@cronos.be,admin@example.com

# Session settings
SESSION_COOKIE_AGE=86400  # 24 hours
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
